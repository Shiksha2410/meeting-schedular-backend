{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node", // ✅ Ensures proper module resolution
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true, // ✅ Fixes CommonJS module import issues
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
